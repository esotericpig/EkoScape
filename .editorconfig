root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 110
trim_trailing_whitespace = true

ij_any_align_multiline_array_initializer_expression = true
ij_any_align_multiline_binary_operation = true
ij_any_align_multiline_chained_methods = true
ij_any_align_multiline_extends_list = true
ij_any_align_multiline_for = true
ij_any_align_multiline_parameters = true
ij_any_align_multiline_parameters_in_calls = true
ij_any_align_multiline_ternary_operation = true
ij_any_space_after_comma = false
ij_any_space_before_comma = false
ij_continuation_indent_size = 4
ij_formatter_off_tag = @formatter:off
ij_formatter_on_tag = @formatter:on
ij_formatter_tags_enabled = true
ij_smart_tabs = false
ij_visual_guides = 80,110
ij_wrap_on_typing = false

[*.md]
trim_trailing_whitespace = false

# [{*.c,*.c++,*.c++m,*.cc,*.ccm,*.cp,*.cpp,*.cppm,*.cu,*.cxx,*.cxxm,*.i,*.ii,*.ixx,*.m,*.mm,*.mxx,*.rc,*.usf}]
# [{*.cmake*,CMakeLists.txt}]
# [*.rb]
# [{*.sh,*.bash,*.zsh}]
# [*.toml]
# [{*.xml,*.plist}]
